generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DB_URL")
}

enum Roles {
  super_admin
  store_admin
  store_manager
  //  more roles later

}
model User {
  id Int @id @default(autoincrement())
  name String
  email String? @unique
  role String
  password String
  // profile Profile?
  // profileId Int @unique
}

